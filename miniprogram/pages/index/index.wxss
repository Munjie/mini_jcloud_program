.container {
  height: 100vh;
  background-color: #121212;
  color: #ffffff;
  padding: 20px;
  box-sizing: border-box;
}

.search-box {
  margin-top: 40px;
  margin-bottom: 60px;
}

.search-input {
  background: #1e1e1e;
  height: 45px;
  border-radius: 12px;
  padding: 0 15px;
  font-size: 16px;
}

.ph { color: #555; }

.weather-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80px;
}

.city {
  font-size: 24px;
  font-weight: 300;
  opacity: 0.8;
}

.temp {
  font-size: 100px;
  font-weight: 200;
  margin: 10px 0;
}

.desc {
  font-size: 18px;
  letter-spacing: 2px;
  text-transform: uppercase;
  opacity: 0.6;
}

.detail-row {
  display: flex;
  justify-content: space-around;
  background: #1e1e1e;
  padding: 25px;
  border-radius: 20px;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 12px;
  color: #777;
  margin-bottom: 8px;
}

.value {
  font-size: 18px;
  font-weight: 500;
}