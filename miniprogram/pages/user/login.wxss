/* 按钮上的扫光动画 */
.shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transform: skewX(-20deg);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  20% { left: 100%; }
  100% { left: 100%; }
}

/* 老用户头像特别样式 */
.avatar.old-user {
  border: 4rpx solid #00f2fe;
  box-shadow: 0 0 30rpx rgba(0, 242, 254, 0.5);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 0 20rpx rgba(0, 242, 254, 0.4); }
  50% { transform: scale(1.05); box-shadow: 0 0 40rpx rgba(0, 242, 254, 0.7); }
  100% { transform: scale(1); box-shadow: 0 0 20rpx rgba(0, 242, 254, 0.4); }
}

.user-name-display {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin: 30rpx 0 60rpx;
}

.welcome-tag {
  position: absolute;
  bottom: -10rpx;
  background: #00f2fe;
  color: #000;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.switch-account {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.4);
  text-decoration: underline;
}


/* --- 通用圆形头像样式 --- */
.avatar-circle {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%; /* 确保绝对圆形 */
  display: block;
}

.avatar-container {
  position: relative;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* --- 新用户样式 --- */
.avatar-wrapper-circle {
  padding: 0;
  width: 180rpx !important;
  height: 180rpx !important;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  overflow: visible; /* 让相机图标可以超出边缘 */
}

.camera-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  /* background: #c1c7c7; */
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.3);
  z-index: 2;
}

/* --- 老用户震撼光效 --- */
.shadow-glow {
  border: 4rpx solid #00f2fe;
  box-shadow: 0 0 20rpx rgba(0, 242, 254, 0.6);
}

/* 识别成功后的呼吸外圈动画 */
.identified-anim::after {
  content: '';
  position: absolute;
  width: 190rpx;
  height: 190rpx;
  border: 2rpx solid #00f2fe;
  border-radius: 50%;
  animation: radar 2s infinite;
  z-index: -1;
}

@keyframes radar {
  0% { transform: scale(1); opacity: 0.8; }
  100% { transform: scale(1.5); opacity: 0; }
}

/* 昵称显示 */
.nick-name-text {
  display: block;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 60rpx;
  text-shadow: 0 0 10rpx rgba(255,255,255,0.3);
}

.user-info-section {
  width: 100%;
}