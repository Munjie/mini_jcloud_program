/* pages/login/login.wxss */
page {
  background-color: #0f0f13; /* 深邃黑背景 */
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 1. 背景氛围光斑 */
.glow-bg {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  filter: blur(120rpx);
  opacity: 0.6;
  z-index: 0;
  animation: float 10s infinite ease-in-out;
}
.red { background: #5b2444; top: -100rpx; left: -100rpx; }
.blue { background: #1a2a5e; bottom: -100rpx; right: -100rpx; animation-delay: -5s; }

@keyframes float {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(30rpx, 50rpx); }
}

/* 2. 磨砂玻璃卡片 */
.glass-card {
  position: relative;
  z-index: 10;
  width: 620rpx;
  padding: 80rpx 50rpx;
  background: rgba(255, 255, 255, 0.05); /* 极低透明度 */
  backdrop-filter: blur(20px); /* 核心：背景模糊 */
  -webkit-backdrop-filter: blur(20px);
  border-radius: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 60rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: 4rpx;
  display: block;
  text-align: center;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  display: block;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* 3. 头像区域 */
.avatar-wrapper {
  padding: 0;
  width: 180rpx !important;
  height: 180rpx !important;
  background: transparent;
  border-radius: 50%;
  position: relative;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s;
}

.avatar-wrapper::after { border: none; }

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.camera-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #2c2c2c;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255,255,255,0.1);
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-bottom: 50rpx;
}

/* 4. 输入框 */
.input-group {
  width: 100%;
  margin-bottom: 60rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: 0.3s;
}

.input-group:focus-within {
  border-bottom-color: #fff;
}

.nickname-input {
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.placeholder {
  color: rgba(255, 255, 255, 0.3);
}

/* 5. 按钮流光特效 */
.login-btn {
  width: 100% !important;
  height: 100rpx;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  color: #000;
  font-weight: bold;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 242, 254, 0.3);
  transition: 0.3s;
}

