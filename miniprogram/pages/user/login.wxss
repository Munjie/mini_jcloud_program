.container {
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f2f5, #e0e7ff);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
}

.title {
  display: block;
  margin-top: 20rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.tip {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
}

.info {
  text-align: center;
  margin-bottom: 80rpx;
}

.avatar-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 30rpx;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
}

.no-nick {
  font-size: 36rpx;
  color: #999;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: #07c160;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.login-btn::after {
  border: none;
}

.footer-tip {
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #999;
}